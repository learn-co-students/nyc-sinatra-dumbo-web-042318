<h1><%= @figure.name %></h1>
<p> <a href="/figures/<%= @figure.id %>/edit">Edit</a> </p>

<h3>Titles</h3>
<ul>
<% @figure.titles.each do |title| %>
  <li><%= title.name %></li>
<% end %>
</ul>

<h3>Landmarks</h3>
<ul>
<% @figure.landmarks.each do |landmark| %>
  <li><%= landmark.name %>, <%= landmark.year_completed %></li>
<% end %>
</ul>
