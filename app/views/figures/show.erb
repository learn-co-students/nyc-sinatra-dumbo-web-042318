<h1><%= @figure.name %></h1>
<label><h2>Titles</h2></label>
<ul>
  <% @figure.titles.each do |title|%>
    <li>
      <%= title.name %>
    </li>
  <% end %>
</ul>
<label><h2>Landmarks</h2></label>
<ul>
  <% @figure.landmarks.each do |landmark|%>
    <li>
      <%= landmark.name %>
    </li>
  <% end %>
</ul>
<a href="/figures/<%= @figure.id %>/edit">Edit Figure</a>
