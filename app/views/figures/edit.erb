<h1>Edit <%= @figure.name %>!</h1>

<form action="/figures/<%= @figure.id %>" method="post">
    <input type="hidden" name="_method" value="patch">

    <label for="figure_name">Name:</label>
    <input id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>">

    <br>
    <h2>Titles</h2>
    <% @titles.each do |title| %>
      <label for="title_<%=title.id%>"><%= title.name %></label>
      <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>>
    <% end %>

    <br>
    <h2>Create New Title!</h2>
    <input type="text" name="title[name]" id="new_title">

    <br>
    <h2>Landmarks</h2>
    <ul>

      <% @landmarks.each do |landmark| %>
        <li>
          <label for="landmark_<%= landmark.id %>"><%= landmark.name %></label>
          <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
        </li>
      <% end %>
    </ul>

    <h2>Create New Landmark:</h2>

    <label for="new_landmark">Name:</label>
    <input id="new_landmark" type="text" name="landmark[name]">
    <label for="new_landmark_year">Year:</label>
    <input id="new_landmark_year" type="text" name="landmark[year_completed]">


    <input type="submit" id="Edit Figure">
</form>
